<div class="col-xs-10 col-xs-offset-1">
<li class="post" id="post-<%= article.id %>">
    <div class="container">
      <div id="post-header">
        <div id="post-title">
          <%= article.title %>
        </div>
        <div id="post-date">
          <%= article.created_at.strftime('%m/%d/%Y') %>
        </div>
      </div>
    </div>
    <hr>
    <div class="side-avatar">
      <%= avatar_for(article.user, size: 75) %>
      <div><%= article.user.username %></div>
    </div>
    <div id="post-content">
      <% formatted_content = simple_format(article.content) %>
      <% if full_post %>
        <%= formatted_content %>
      <% else %>
        <%= truncate(formatted_content, length: 1000, escape: false) { link_to "Continue", "articles/#{article.slug}" }%>
      <% end %>
    </div>
</li>
</div>
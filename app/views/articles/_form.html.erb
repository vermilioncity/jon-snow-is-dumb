<div class="row">
  <div class="col-md-10 offset-md-2">
    <div class="control-label col-sm-2"></div>
    <div class="col-sm-6">
      <%= render 'shared/error_messages', obj: @article %>
    </div>
        </div>
        </div>
<div class="row">
   <div class="col-md-10 offset-md-2">
     <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of post", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :content %>
        </div>
        <div class="col-sm-6">
          <%= f.text_area :content, rows: 10, class: "form-control", placeholder: "Body of post" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-large', value: "#{action} post",
                       data: { disable_with: "#{action} post" }%>
        </div>
      </div>
    <% end %>
    <%= link_to 'Back', articles_path %>
  </div>
</div>